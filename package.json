{
  "name": "nxui",
  "version": "1.0.0",
  "description": "NxUI",
  "main": "dist/main/main.js",
  "scripts": {
    "copy-html": "powershell -Command \"Copy-Item src/renderer/*.html dist/renderer/ -Force\"",
    "build": "tsc && npm run copy-html",
    "start": "npm run build && electron .",
    "dev": "tsc && npm run copy-html && electron .",
    "watch": "tsc --watch"
  },
  "keywords": [
    "desktop",
    "widgets",
    "electron",
    "rainmeter",
    "overlay",
    "typescript"
  ],
  "author": "NxUI",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.0",
    "electron": "^33.0.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "electron-store": "^8.2.0",
    "esbuild": "^0.24.0"
  }
}